--- puredata.orig/src/Makefile.am
+++ puredata/src/Makefile.am
@@ -86,8 +86,8 @@
 endif
 
 if PORTAUDIO
-pd_CFLAGS += -DUSEAPI_PORTAUDIO  -I$(top_srcdir)/portaudio/include
