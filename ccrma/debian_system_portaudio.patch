+pd_CFLAGS += -DUSEAPI_PORTAUDIO
+pd_LDADD += -lportaudio
 pd_SOURCES += s_audio_pa.c s_audio_paring.c
 endif
 
@@ -98,8 +98,7 @@
 endif
 
 if PORTMIDI
-INCLUDES += -I$(top_srcdir)/portmidi/pm_common -I$(top_srcdir)/portmidi/porttime
